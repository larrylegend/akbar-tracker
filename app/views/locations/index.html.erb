<h1>Akbar's locations</h1>

<table>
  <tr>
    <th>Lat</th>
    <th>Lng</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.lat %></td>
    <td><%= location.lng %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add new location', new_location_path %>

<br />
<br />
<br />


<% @locations_string = ""

@locations.each do |location|
	@locations_string += "%7C#{location.lat},#{location.lng}"
end

@url = "//maps.googleapis.com/maps/api/staticmap?size=600x300&maptype=roadmap&markers=color:blue#{@locations_string}&sensor=false"
%>

<%= image_tag(@url, :border => "0", :alt => "Map of Akbar's locations") %>
